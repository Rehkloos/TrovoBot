{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "**/__tests__/**",
    "*.test.js",
    "*.spec.js",
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": [
    "app/*",
    "plugins/*"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json"
}
